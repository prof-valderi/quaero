---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Quaero — Revista filosófica";
const description = "Ensaios, traduções, resenhas e dossiês — em diálogo com a Escola Immortalis.";

// Cards de exemplo (depois você troca por conteúdo real / Markdown)
const latest = [
  { title: "Nota editorial: por que Quaero?", tag: "Editorial", href: "/blog" },
  { title: "Rumo ao Número 0: chamada permanente", tag: "Chamada", href: "/numeros" },
  { title: "Roda de leitura: textos introdutórios de filosofia antiga", tag: "Evento", href: "/eventos" },
];

const highlights = [
  { title: "Dossiê inaugural", text: "Platão e o platonismo vivo: leitura guiada, traduções e notas.", href: "/numeros" },
  { title: "Submissões", text: "Ensaios, resenhas e traduções: diretrizes claras e acolhimento editorial.", href: "/contato" },
  { title: "Escola Immortalis", text: "A revista dialoga com a escola — sem vínculo com instituições oficiais.", href: "/sobre" },
];
---

<BaseLayout title={title} description={description}>
  <div class="hero-wrap">
    <div class="hero">
      <div class="hero-inner">
        <section class="cover" aria-label="Capa do destaque">
          <div class="cover-content">
            <div>
              <div class="badge">Destaque • 2025/1</div>
              <div style="height:10px"></div>
              <div class="cover-title serif">Platão</div>
              <div class="cover-title serif" style="opacity:.95">e o</div>
              <div class="cover-title serif" style="opacity:.9">Platonismo</div>
              <div style="height:12px"></div>
              <div class="cover-sub">
                Dossiê de abertura: leituras, notas e traduções.
              </div>
            </div>

            <div class="cover-footer">
              <div class="serif" style="font-size:1.1rem;">Quaero</div>
              <div class="muted">Revista filosófica</div>
            </div>
          </div>
        </section>

        <aside class="hero-card">
          <h1 class="serif">Uma revista para pensar com rigor — e escrever com clareza.</h1>
          <p class="small">
            A <strong>Quaero</strong> nasce como projeto editorial independente, em diálogo com a
            <strong> Escola Immortalis</strong>. Sem filiação institucional: apenas filosofia, texto e estudo.
          </p>

          <div class="hero-actions">
            <a class="btn" href="/numeros">Ler o dossiê</a>
            <a class="btn secondary" href="/sobre">Conhecer a revista</a>
          </div>

          <hr class="hr" />

          <p class="small muted">
            Próximo passo: <strong>Número 0</strong> (editorial + sumário + PDFs).  
            Enquanto isso, publicamos textos avulsos no Blog.
          </p>
        </aside>
      </div>
    </div>
  </div>

  <div class="section-title">
    <h2 class="serif">Últimos destaques</h2>
    <div class="hint">Leituras curtas para começar</div>
  </div>

  <div class="grid cols-3">
    {latest.map((item) => (
      <a class="card" href={item.href} style="padding:16px; text-decoration:none;">
        <div class="badge">{item.tag}</div>
        <div style="height:10px"></div>
        <div class="serif" style="font-size:1.15rem; font-weight:700;">{item.title}</div>
        <div style="height:8px"></div>
        <div class="small muted">Abrir</div>
      </a>
    ))}
  </div>

  <hr class="hr" />

  <div class="section-title">
    <h2 class="serif">O que você encontra aqui</h2>
    <div class="hint">Uma casa editorial pequena, mas consistente</div>
  </div>

  <div class="grid cols-3">
    {highlights.map((h) => (
      <a class="card" href={h.href} style="padding:16px; text-decoration:none;">
        <div class="serif" style="font-size:1.15rem; font-weight:800;">{h.title}</div>
        <div style="height:8px"></div>
        <p class="small muted">{h.text}</p>
        <div class="small" style="margin-top:10px; font-weight:700;">Ver mais →</div>
      </a>
    ))}
  </div>
</BaseLayout>
